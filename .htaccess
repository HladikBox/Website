RewriteEngine on

RewriteRule ^/*$ index.php [NC,L]
RewriteRule ^.*$ index.php [NC,L]
RewriteRule ^([a-zA-Z0-9\-]*)$ $1.php [NC,L]
RewriteRule ^([a-zA-Z0-9\-]*)/$ $1.php [NC,L]
RewriteRule ^([a-zA-Z0-9\-]*)/([a-zA-Z0-9\-]*)$ /$1/$2.php [NC,L]
RewriteRule ^([a-zA-Z0-9\-]*)/([a-zA-Z0-9\-]*)/$ /$1/$2.php [NC,L]
